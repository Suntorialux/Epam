package by.gsu.epamlab;

public class TransportExpensesPurchase extends AbstractPurchase {

	private int transportExpenses;

	public TransportExpensesPurchase() {
		super();
		this.transportExpenses=0;
		// TODO Auto-generated constructor stub
	}

	public TransportExpensesPurchase(Commodity commodity, int numberUnits, int transportExpenses) {
		super(commodity, numberUnits);
		this.transportExpenses = transportExpenses;
	}

	public int getTransportExpenses() {
		return transportExpenses;
	}

	public void setTransportExpenses(int transportExpenses) {
		this.transportExpenses = transportExpenses;
	}

	@Override
	public int getCost() {
		Commodity commodity = super.getCommodity();
		int cost = commodity.getPrice()*getNumberUnits()+transportExpenses;
		//cost/=1000*1000;
		return cost;
	}

	@Override
	protected String fieldsToString() {
		// TODO Auto-generated method stub
		return super.fieldsToString()+";"+transportExpenses;
	}

	
	
	
	
}

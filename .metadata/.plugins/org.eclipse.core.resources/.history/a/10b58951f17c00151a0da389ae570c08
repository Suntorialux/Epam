package by.gsu.epamlab;

import java.util.Scanner;

public class DiscountPurchase extends Purchase {

    private int priceDiscount;

    public DiscountPurchase() {
    	super();
        this.priceDiscount = 0;
    }

    public DiscountPurchase(String commodityName, int price, int numberUnits, int priceDiscount) {
        super(commodityName, price, numberUnits);
        this.priceDiscount = priceDiscount;
    }

    public DiscountPurchase(Scanner scanner) {
        super(scanner);
        this.priceDiscount = scanner.nextInt();
    }

    public int getPriceDiscount() {
        return priceDiscount;
    }

    public void setPriceDiscount(int priceDiscount) {
        this.priceDiscount = priceDiscount;
    }

    @Override
    public int getCost() {
        int cost=(getPrice()-priceDiscount)*getNumberUnits();
        return cost;
    }

    @Override
    public String toString() {
        return super.fieldsToString()+";"+ priceDiscount +";"+getCost();
    }
}

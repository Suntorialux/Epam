package by.gsu.epamlab;

public class TransportExpensesAbstractPurchase extends AbstractPurchase {

	private int transportExpenses;

	public TransportExpensesAbstractPurchase() {
		super();
		this.transportExpenses=0;
		// TODO Auto-generated constructor stub
	}

	public TransportExpensesAbstractPurchase(Commodity commodity, int numberUnits, int transportExpenses) {
		super(commodity, numberUnits);
		this.transportExpenses = transportExpenses;
	}

	public int getTransportExpenses() {
		return transportExpenses;
	}

	public void setTransportExpenses(int transportExpenses) {
		this.transportExpenses = transportExpenses;
	}

	@Override
	public int getCost() {
		int cost = commodity.getPrice()*numberUnits+transportExpenses;
		cost=cost/1000*1000;
		return cost;
	}

	@Override
	protected String fieldsToString() {
		// TODO Auto-generated method stub
		return super.fieldsToString()+";"+transportExpenses;
	}

	
	
	
	
}
